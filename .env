# LLM Document Processing System Configuration
# This system uses FREE local models - no API keys required!

# System Configuration
LOG_LEVEL=INFO
MAX_FILE_SIZE_MB=50
MAX_CHUNK_SIZE=512
MIN_CHUNK_SIZE=50
OVERLAP_SIZE=50

# Free Model Configuration (no API keys needed)
EMBEDDINGS_MODEL=all-MiniLM-L6-v2
USE_LOCAL_MODELS=true

# Vector Search Configuration
DENSE_WEIGHT=0.7
SPARSE_WEIGHT=0.3
SIMILARITY_THRESHOLD=0.3
MAX_RESULTS=10

# Validation Configuration
DEFAULT_AGE_MIN=18
DEFAULT_AGE_MAX=80
DEFAULT_WAITING_PERIOD_DAYS=90
DEFAULT_MAX_CLAIM_AMOUNT=500000

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Optional: ChromaDB Configuration (if using external vector DB)
CHROMA_PERSIST_DIRECTORY=./data/chroma
